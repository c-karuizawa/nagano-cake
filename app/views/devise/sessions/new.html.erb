<div class="container">
  
  <!--退会ずみのユーザーに対するメッセージ-->
  <% if flash[:alert] %>
  <div class="alert" role="alert">
  <p class="notice text-center" style="color:red;"><%= flash[:alert] %></p></div>
  <% end %>

    <h3 class="m-5">
    <span class="bg-light">　ログイン　</span>
    </h3>
    <div class="row">
    <p class="col-sm-1"></p>
    <p class="col">
      <span class="bg-light">　会員の方はこちらからログイン　</span>
    </p>
    </div>
<%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
  <p class="col-sm-2"></p>
  <p class="col-sm-2">メールアドレス</p>
  <div class="field col-sm-8">
    <%= f.email_field :email, autofocus: true, :size => "45*30", autocomplete: "email", placeholder: "sample@example.com" %>
  </div>
  </div>
  
  <div class="row">
    <p class="col-sm-2"></p>
    <p class="col-sm-2">パスワード</p>
  <div class="field col-sm-8">
    <%= f.password_field :password, :size => "45*30", autocomplete: "current-password" %>
  </div>
  </div>
  
  <div class="row mt-4">
    <p class="col-sm-4"></p>
  <div class="actions col-sm-8">
    <%= f.submit "　　ログイン　　", class: "btn btn-primary" %>
  </div>
  </div>
<% end %>
  <div class="row mt-5">
    <p class="col-sm-1"></p>
    <p class="col">
      <span class="bg-light">　会員登録がお済みでない方　</span>
    </p>
    </div>
 <div class="row">
    <p class="col-sm-2"></p>
    <p class="col">
      <%= link_to "こちら",new_customer_registration_path, class: "border-bottom" %>　　から新規登録を行ってください。
    </p>
    </div>
</div>
