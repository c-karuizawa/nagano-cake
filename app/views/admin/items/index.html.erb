<div class="container">

<h2 class="head-line">商品一覧</h2>
<p class="text-right"><%= link_to "","items/new",class:"fas fa-plus-circle fa-2x"%></p>
<div class="row　justify-content-md-center">
<div>
  
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
    <% @items.each do |item| %>
    <tr>
      <th><%= item.id %></th>
      <th><%= link_to admin_item_path(item),class:"btn-link" do %>
      <%= item.name %><% end %></th>
      <th><%= item.price %></th>
      <th><%= item.genre.name %></th>
      
       <% if item.on_sale == true %>
      <th style="color:green;">販売中</th>
      <% else %>
      <th style="color:grey;">販売停止中</th>
      <% end %>
      
    </tr>
    <% end %>
   </tbody>
</table>
</div>
</div>
 <div class="pagination pagination-sm justify-content-center">
 <%= paginate @items %></div>
 </div>