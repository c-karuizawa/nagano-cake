<div class="container">

<h2 class="head-line">商品一覧</h2>
<div class="row　justify-content-md-center">
<div>
  
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    
    <tbody>
    <% @items.each do |item| %>
    <tr>
      <th>商品ID</th>
      <th><%= link_to admin_item_path(item),class:"btn-link" do %>
      <%= item.name %><% end %></th>
      <th><%= item.price %></th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
    <% end %>
   </tbody>
</table>
</div>
</div>
</div>
<%= paginate @items %>