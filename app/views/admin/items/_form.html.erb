<!--%= form_with model:@item,url:admin_items_path,local:true do |f| %>-->

　<div class="form-group row">
   <%= f.label :"商品名",class:"col-sm-3"%>
   <%= f.text_field :name,placeholder:"商品名",required: true,class:"form-control col-sm-9"%></div>
  <div class="form-group row">
   <%= f.label:"商品説明",class:"col-sm-3" %>
   <%= f.text_area :introduction,placeholder:"商品説明",required: true,class:"form-control col-sm-9" %></div>
  <div class="form-group row">
   <%= f.label:"ジャンル",class:"col-sm-3" %>
   <%= f.collection_select(:genre_id, @genres, :id, :name, class: "col-sm-9") %></div>
  <div class="form-group row">
   <%=f.label:"税抜価格",class:"col-sm-3"%>
   <%= f.text_field :price,placeholder:"1000",required: true,class:"form-control col-sm-8"%>円</div>
  <div class="form-group row">
    <%=f.label:"販売ステータス",class:"col-sm-4"%>
    <div class="on_sale" style="padding-right:20px;">
    <%= f.radio_button :on_sale, "販売中",checked: true %>
    <%= f.label :on_sale, "販売中", {value: :true, style: "display: inline-block;"} %></div>
    <div class="on_sale" style="padding-right:20px;">
    <%= f.radio_button :on_sale, :false %>
    <%= f.label :on_sale, "販売停止中", {value: :false, style: "display: inline-block;"} %></div>

  </div>
