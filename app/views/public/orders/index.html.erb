<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12 px-sm-0, content'>
      <table cellpadding="5" border="1">
      <span>　注文履歴一覧　</span>
      <!--colgroupはtdでcolspanを適用させるために記載-->
      <colgroup>
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
        <col style="width: 10%;">
      </colgroup>
      <thead>
        <tr style="background-color: #EEEEEE;">
          <th colspan="1">注文日</th>
          <th colspan="4">配送先</th>
          <th colspan="2">注文商品</th>
          <th colspan="1">支払金額</th>
          <th colspan="1">ステータス</th>
          <th colspan="1">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td colspan="1"><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td colspan="4">〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
          <td colspan="2"><% order.order_items.each do |o| %><%= o.item.name %><br><% end %></td>
          <td colspan="1"><%= order.total_price.to_s(:delimited) %></td>
          <td colspan="1"><%= order.order_status %></td>
          <td colspan="1" align="center"><%= link_to '表示する', show_order_path(order), class: "btn btn-outline-primary order_#{order.id}" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>

<style>
  .content{
    padding-top: 30px;
    padding-bottom: 450px;
  }

  span{
    margin-left: 30px;
    background-color: #EEEEEE;
    font-size: 20px;
    font-family: serif;
  }
  table{
    margin-top: 30px;
    width: 100%;
  }
</style>