<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12 px-sm-0, content'>

    <% if @order.errors.any? %>
      <div id="error explanation">
        <h3 style="color: red;"><%= @order.errors.count %> error prohibited this obj from being saved:</h3>
          <ul style="color: red;">
            <% @order.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
      </div>
    <% end %>

    <span>　注文情報入力　</span>
    <%= form_with model: @order, url: orders_confirm_path, local: true do |f| %>
      <h6 style="font-weight: bold;">支払方法</h6>
        <div>
          <%= f.radio_button :payment, :card, checked: true %>
          <%= f.label :payment, "クレジットカード", {value: :card} %>
        </div>
        <div>
          <%= f.radio_button :payment, :bank %>
          <%= f.label :payment, "銀行振り込み", {value: :bank} %>
        </div>


      <h6 style="font-weight: bold;">お届け先</h6>
        <div>
          <%= f.radio_button :address, :home, checked: true %>
          <%= f.label :address, "ご自身の住所", value: :home %>
          <!--&emsp;は空白の役割-->
          <div style="margin-left: 30px;">〒<%= @customer.postal_code %>&emsp;<%= @customer.address %><br><%= @customer.last_name %><%= @customer.first_name %></div>
        </div>
        <br>
        <div>
          <%= f.radio_button :address, :locations %>
          <%= f.label :address, "登録済住所から選択", value: :locations %>
          <br>
          <!--address_and_nameはlocation.rbで定義-->
          <div style="margin-left: 30px;"><%= f.collection_select :address , @locations, :id, :address_and_name, :include_blank => "選択してください" %></div>

        </div>
        <br>
        <div>
          <%= f.radio_button :address, :new %>
          <%= f.label :address, "新しいお届け先", value: :new %>
            <table cellpadding="10" style="margin-left: 30px;">
              <tr>
                <td>郵便番号（ハイフンなし）</th>
                <td><%= f.text_field :postal_code, :size => "30" %></td>
              </tr>
              <tr>
                <td>住所</th>
                <td><%= f.text_field :address, :size=>"60" %></td>
              </tr>
              <tr>
                <td>宛名</th>
                <td><%= f.text_field :name,:size=>"30" %></td>
              </tr>
            </table>
        </div>
        <div align="center"><%= f.submit '確認画面へ進む', class: "btn btn-primary" %></div>
    <% end %>
    </div>
  </div>
</div>

<style>
  .content{
    padding-top: 30px;
    padding-bottom: 30px;
  }
  span{
    margin-left: 30px;
    background-color: #EEEEEE;
    font-size: 20px;
    font-family: serif;
  }
  h6{
    margin-top: 20px;
  }
</style>