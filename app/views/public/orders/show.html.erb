<div class='container'>
  <div class='row'>
    <div class='col-md-12 col-lg-12 px-sm-0, content'>
    <span>　注文履歴詳細　</span>
    <% @orders.each do |order| %>

      <div style="margin-top: 30px;">
        <table cellpadding="10" border="1">
          <!--colgroupはtdでcolspanを適用させるために記載-->
          <colgroup>
            <col style="width: 20%;">
            <col style="width: 80%;">
          </colgroup>
          <tr style="background-color: #EEEEEE;">
            <th colspan="1">注文日</th>
            <td colspan="4"><%= order.created_at %></th>
          </tr>
          <tr>
            <th colspan="1">配送先</td>
            <td colspan="4"><%= order.postal_code %><%= order.address %><%= order.name %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= order.payment %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td><%= order.order_status %></td>
          </tr>
        </table>

        <table>
          <colgroup>
            <col style="width: 50%;">
            <col style="width: 50%;">
          </colgroup>
          <tr>
            <th colspan="1">商品合計</th>
            <td colspan="1"><%= '#' %></td>
          </tr>
          <tr>
            <th colspan="1">配送料</th>
            <td colspan="1"><%= order.postage %></td>
          </tr>
          <tr>
            <th colspan="1">ご請求額</th>
            <td colspan="1"><%= order.total_price%></td>
          </tr>
        </table>
      </div>
      <div>
        <table cellpadding="10" border="1">
          <colgroup>
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
            <col style="width: 10%;">
          </colgroup>
          <thead>
            <tr>
              <th colspan="6">商品</th>
              <th colspan="2">単価（税込）</th>
              <th colspan="1">個数</th>
              <th colspan="1">小計</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td colspan="6"><%= '#' %></td>
              <td colspan="2"><%= '#' %></td>
              <td colspan="1"><%= '#' %></td>
              <td colspan="1"><%= '#' %></td>
            </tr>
          </tbody>
        </table>
      </div>


    <% end %>
    </div>
  </div>
</div>

<style>
  .content{
    padding-top: 30px;
    padding-bottom: 30px;
  }

  span{
    margin-left: 30px;
    background-color: #EEEEEE;
    font-size: 20px;
    font-family: serif;
  }
  table{
  }
</style>