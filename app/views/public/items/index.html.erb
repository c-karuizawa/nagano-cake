<div class="container">
<div class="row" style="margin-top:40px;">
    
<%= render 'genrelist' %>

<div class="col-9">
<h3>商品一覧</h3>

<div class="d-flex flex-row flex-wrap">
 <% @items.each do |item| %>
 <div class="item-image col-3" style="margin-bottom:30px;">
     <%= link_to item_path(item) do %>
     <%= attachment_image_tag item, :image, format: 'jpeg', fallback: "no_image.jpg",size:"200x200" %><% end %><br>
     <%=item.name %><br>
     <%=item.price * 1.08%>
 </div>
 <% end %>
 
 </div>
 
 <div class="pagination pagination-sm justify-content-center">
 <%= paginate @items %></div>

</div>

</div>

</div>



